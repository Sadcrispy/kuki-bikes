<div class="container-fluid d-flex flex-row">
  <div class="w-55 col-8 m-3">
    <% @bikes.each do |bike| %>
      <%= render 'card', bike: bike %>
    <% end %>
  </div>
  <div style="width: 100%; height: 85vh;"
    class="container border-0 m-4 p-0 rounded-4 shadow-sm sticky-map"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
</div>
</div>
