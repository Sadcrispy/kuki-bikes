<%= link_to bike_path(booking.bike) do %>
  <div class="card flex-row bg-white border-0 rounded-4 mb-4 shadow-sm">
    <%= cl_image_tag(booking.bike.photo.key, width: 300, height: 200, crop: :fill, class: "rounded-start-4 ") %>
    <div class="p-3">
      <h2><%= booking.bike.brand %> <%= booking.bike.model %> <%= booking.bike.year %></h2>
      <h5><%= booking.bike.location %></h5>
      <p class="mb-1 <%= booking.status %>"><i class="fa-solid fa-horse"></i> <%= booking.status.humanize %></p>
      <span class="fw-semibold"><%= number_to_currency(booking.total_price, locale: :ja, precision: 0, unit: 'Â¥') %></span>
      <p><%= booking.start_date %> to <%= booking.end_date %></p>
    </div>
  </div>
<% end %>
<% if booking.bike.user == current_user && booking.status == "pending" %>%
  <div class="d-flex">
    <%= simple_form_for booking, url: owner_booking_path(booking) do |f| %>
      <%= f.input :status, as: :hidden, input_html: { value: 'confirmed'} %>
      <%= f.submit 'Confirm', class: 'btn btn-info' %>
    <% end %>
    <%= simple_form_for booking, url: owner_booking_path(booking) do |f| %>
      <%= f.input :status, as: :hidden, input_html: { value: 'declined'} %>
      <%= f.submit 'Decline', class: 'btn btn-light' %>
    <% end %>
  </div>
<% else %>
  <p class='booking-tag'><%= booking.status %></p>
<% end %>
