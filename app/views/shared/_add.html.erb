  <%= simple_form_for @bike do |f| %>
  <div class="m-3 container bart d-flex justify-content-center px-5">
    <div class="search-form-control form-group d-flex justify-content-between">
      <div>
        <%= f.input :brand, label: false, placeholder: 'BRAND', input_html: { class: "form-control no-border string required" } %>
      </div>
      <div>
        <%= f.input :model, label: false, placeholder: 'MODEL', input_html: { class: "form-control no-border string required" } %>
      </div>
      <div>
        <%= f.input :year, label: false, placeholder: 'YEAR', input_html: { class: "form-control no-border string required" } %>
      </div>
      <div>
        <%= f.input :location, label: false, placeholder: 'LOCATION', input_html: { class: "form-control no-border string required" } %>
      </div>
      <div>
        <%#= f.input :description, as: :string, label: false, placeholder: 'DESCRIPTION', input_html: { class: "form-control no-border string required" } %>
      </div>
      <div>
        <%= f.input :price_per_day, label: false, placeholder: 'PRICE P/DAY', input_html: { class: "form-control no-border string required" } %>
      </div>
      <div>
        <%= f.input :photo, input_html: { class: 'd-none' }, label_html: { class: 'upload-photo' }, label: 'PHOTO' %>
      </div>
      <div class="position-relative bart2">
        <%= button_tag(type: 'submit', class: "btn btn-flat add-button ms-5") do %>
          <i class="fa-solid fa-plus"></i>
        <% end %>
      </div>
    </div>
  </div>
  <div class="d-flex justify-content-center">
    <div class="m-3 container bart d-flex justify-content-center px-5 w-75">
      <%= f.input :description, as: :text, label: false, placeholder: 'DESCRIPTION', input_html: { class: "form-control no-border string required bike-description" }, wrapper_html: { class: 'w-100 h-100 py-3'} %>
    </div>
  </div>
<% end %>
