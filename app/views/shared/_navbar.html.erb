<div class="navbar navbar-expand-sm navbar-light navbar-lewagon sticky-top">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "https://res.cloudinary.com/dzmlzpvcj/image/upload/v1732101047/pngtree-black-and-white-motorcycle-rider-no-background-png-image_10443546_gicokz.png" %>
    <% end %>
    <%= link_to root_path do %>
      <h1>
        kuki bikes
      </h1>
    <% end %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item dropdown">
            <a href="#" class="avatar" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <% if current_user.avatar.attached? %>
                <%= cl_image_tag(current_user.avatar.key, class: "avatar-large mb-2") %>
              <% else %>
                <%= image_tag "https://res.cloudinary.com/dzmlzpvcj/image/upload/v1732101046/image-of-the-icon-design-for-a-motorbike-helmet-png_ufvgcr.webp", class: "avatar-large mb-2", alt: "avatar-large" %>
              <% end %>
            </a>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "See your bookings", owner_bookings_path, class: "dropdown-item" %>
              <%= link_to "Add a bike", new_bike_path, class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
