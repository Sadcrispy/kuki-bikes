<%= simple_form_for :search, url: root_path, method: :get do |f| %>
  <div class="m-3 container bart d-flex justify-content-center">
    <div class="search-form-control form-group d-flex">
      <div>
        <%= f.input :location, label: false, placeholder: 'WHERE', input_html: { class: "form-control string required" } %>
      </div>
      <div>
        <%= f.input :start_date, label: false, placeholder: 'FROM', as: :string, input_html: { class: "form-control string required",  data: { controller: "datepicker" }  } %>
      </div>
      <div class="position-relative">
        <%= f.input :end_date, label: false, placeholder: 'UNTIL', as: :string, input_html: { class: "form-control string required",  data: { controller: "datepicker" }  } %>
        <%= button_tag(type: 'submit', class: "btn btn-flat") do %>
          <i class="fas fa-search"></i>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
